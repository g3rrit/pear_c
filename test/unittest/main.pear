testArgs : (num: i32, res : bool, txt : char*) -> bool
{
    if(num != 15)
        res = false;

    if(strcmp("test",txt) != 0)
        res = false;
    
    return res;
}

testCondition : () -> bool
{
    res : bool = true;
    if(true || false)
    {
        res = true;
    }
    else if(true)
    {
        res = false;
    }
    else
    {
        res = false;
    }

    tnum : i32 = null;
    while(!tnum)
    {
        tnum = 10;
    }

    if(tnum != 10)
        res = false;
    
    return res;
}

testloop : () -> bool
{
    res : bool = true;

    count : i32 = 0;
    for(i : i32 = 0; i < 15; i++)
    {
        count++;        
    }
    if(count != 15)
        res = false;

    for(i : i32 = 15; i > 0; i--)
    {
        count--;
    }

    if(count != 0)
        res = false;

    while(count < (15 - 5))
    {
        count++;
    }

    if(count != 10)
        res = false;

    return res;
}
