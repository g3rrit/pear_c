}

testExpressions : () -> bool
{
    testExS : TestExS* = new TestExS();
    testExS->start = new TestExS();

    num : i32 = 0;
    num += 10;
    testExS->start->num += 10;
    if(testExS->start->start)
    {
        return false;
    } 

    res : bool = testExS->start->test();
    
    free(testExS->start);
    free(testExS);

    return res;
}

